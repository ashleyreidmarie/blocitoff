<%= form_for [item], remote: true do |f| %>
 <div class="form-group normal-text">
   <%= f.label :name, class: 'sr-only' %>
   <%= f.text_field :name, class: 'form-control', placeholder: "Enter a new item...", :required => 'required' %>
 </div>
 <div class="text-center">
   <%= f.submit "Add Item to List", class: 'btn btn-default' %>
   <%= link_to "Cancel", cancel_items_path, class: 'btn btn-warning', remote: true%>
 </div>
<% end %>